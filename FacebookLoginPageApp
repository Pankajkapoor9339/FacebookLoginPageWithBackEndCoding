4.btn.xml //the colour and format of the signup button
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle"
        >
       <solid android:color="#365998">

       </solid>
        <stroke android:width="1dp">
            <corners android:radius="20dp">

    </shape>
</item>

</selector>

5.colours.xml //the app and background colours of the app
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">#3B599A</color>
    <color name="colorPrimaryDark">#3B5998</color>
    <color name="colorAccent">#1F2FC2</color>
</resources>

6.ids.xml //the registration id of the class
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="reg" type="id" />
</resources>

7. string.xml // the default name to be shown in the app
<resources>
    <string name="app_name">Facebook</string>
</resources>

 8. styles.xml //changes the colour styles in the app
 <resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
